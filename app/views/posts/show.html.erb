<button><%= link_to("Like", new_post_like_path(post_id: @post.id, user_id: @current_user))%></button>
<br>
<br>
Comments:<br>
<ul>
 <%@comments.each do |comment|%>
    <li><%= comment.content%></li>
    <br>
<%end%>
</ul>

<%= form_for(@comment) do |f|%>
    <%= f.label :content%>
    <br>
    <%= f.text_area :content%>
    <br>
    <%=f.hidden_field :post_id, value: "#{@post.id}"%>
    <%= f.submit "Comment"%>
<%end%>
<br>
<br>
<% if @post.user_id == session[:user_id]%>
    <button><%= link_to("Edit", edit_post_path)%></button>
    <%= button_to("delete", @recipe, :method => :delete) %>
<%end%>
