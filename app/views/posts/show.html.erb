
<p>
  Author: <%= @post.user.user_name%>
</p>
<p>
Title: <%= @post.title %>
</p>
<p>
Content: <%= @post.content %>
</p>

<br><br>
Likes: <%= @post.post_likes.count%>
<br>
<button class="button"  style="vertical-align:middle"><%= link_to("Like", new_post_like_path(post_id: @post.id, user_id: @current_user))%></button>
<br>
<br>
Previous Comments:
<% if @comments.length == 0 %>
  <br>No Comments Found. Be the first to comment below. =)<br><br>
<%  else %>
  <ul>
   <%@comments.each do |comment|%>
      <li><%= comment.content%></li>
  <%end%>
  </ul>
<% end %>




Comment:
<%= form_for(@comment) do |f|%>

    <%= f.text_area :content%>
    <br>
    <%=f.hidden_field :post_id, value: "#{@post.id}"%>
    <%= f.submit "Comment", :class => "button", :style => "vertical-align:middle"%>
<%end%>


<% if @post.user_id == session[:user_id]%>
  <button class="button"  style="vertical-align:middle">
      <%= link_to("Edit", edit_post_path)%>
  </button>
  <button class="button"  style="vertical-align:middle">
      <%= link_to("Delete", @post, :method => :delete)%>
  </button>

    <%# <%= button_to("Delete", @recipe, :method => :delete) %>
<%end%>
