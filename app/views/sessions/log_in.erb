<% if !logged_in?%>
    <%= flash[:message] %>
<% end %>

<%= form_for(:session, url: login_path) do |f|%>
    <%= f.label :user_name%>
    <%= f.text_field :user_name%>
    <br>
    <%= f.label :password%>
    <%= f.password_field :password%>
    <br>
    <%= f.submit "Login"%><br>
    Not signed up? <%= link_to("Sign Up", new_user_path)%>
<%end%>

