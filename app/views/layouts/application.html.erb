<!DOCTYPE html>
<html>
  <head>
    <title># OctoThorp</title>
    <%= csrf_meta_tags %>



    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="ui inverted menu">
      <a href="/" class="item">
        <h1># OctoThorp</h1>
      </a>
      <div class="right menu">
        <% if logged_in? %>
            <button><%= link_to("Create New Post", new_post_path)%></button>
            <button><%= link_to("Profile", @current_user)%></button>
            <button><%= link_to("Logout", logout_path)%></button>
        <% else %>
            <button><%= link_to("Create Account", new_user_path)%></button>
            <button><%= link_to("Login", login_path)%></button>
        <% end %>
      </div>

  </div>
  <body>
    <div class="ui centered grid ">
      <div class="eight wide column">

        <%= yield %>

        <div class="footer-global__share">
          Stay Connected
        </div>

      </div>
    </div>
  </body>
</html>
