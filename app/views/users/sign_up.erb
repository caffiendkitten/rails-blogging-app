<%= form_for(@user) do |f|%>
    <%= f.label :user_name%>
    <%= f.text_field :user_name%>
    <br>
    <%= f.label :password%>
    <%= f.password_field :password%>
    <br>
    <%= f.label :password_confirmation%>
    <%= f.password_field :password_confirmation%>
    <br>

    <%= f.submit "Sign Up", :class => "button", :style => "vertical-align:middle" %>
<%end%>
